<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="classpersistence.Challenge" table="challenge">
        <id name="id" type="integer">
            <column name="id" />
        </id>
        <property name="createdDate" type="date">
            <column name="createdDate" />
        </property>
        <property name="state" type="integer">
            <column name="state" />
        </property>
        <property name="startingDate" type="date">
            <column name="startingDate" />
        </property>
        <property name="endingDate" type="date">
            <column name="endingDate" />
        </property>

        <component name="address" class="classpersistence.Address" insert="true" update="true" >
            <property name="latitude" type="double">
                <column name="latitude" />
            </property>
            <property name="longitude" type="double">
                <column name="longitude" />
            </property>
            <property name="street" type="string">
                <column name="street" />
            </property>
            <property name="city" type="string">
                <column name="city" />
            </property>
            <property name="zipCode" type="string">
                <column name="zipCode" />
            </property>
            <property name="country" type="string">
                <column name="country" />
            </property>
        </component>

        <set name="rPhoto" cascade="all">
            <key column="id_challenge"/>
            <one-to-many class="classpersistence.Photo" />
        </set>

        <set name="rComment" cascade="all" >
            <key column="id_challenge"/>
            <one-to-many class="classpersistence.Comment" />
        </set>
        <set name="rNote" cascade="all" >
            <key column="id_challenge"/>
            <one-to-many class="classpersistence.Note" />
        </set>
        <set name="rrClient" table="participant" cascade="all">
            <key column="id_challenge"/>
            <many-to-many column="id_user" class="classpersistence.Client" />
        </set>


    </class>
</hibernate-mapping>
